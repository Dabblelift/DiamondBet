@model DiamondBet.Web.ViewModels.Teams.TeamByIdViewModel
@{
    this.ViewData["Title"] = Model.Name;
}

<h1>Team name: @Model.Name</h1>

<h2>Country: @Model.CountryName</h2>
<h3>Founded In: @Model.YearFounded ~~ Nickname: @Model.NickName</h3>


<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Teams" asp-action="Edit" asp-route-id="@Model.Id">Edit team</a>
    <a class="nav-link text-dark" onclick="return confirm('Are you sure you want to delete this team?');" asp-area="" asp-controller="Teams" asp-action="Delete" asp-route-id="@Model.Id">Delete team</a>
</p>

<p>Last 5 Games:</p>
<ul>
    @foreach (var game in Model.PreviousGames)
    {
        <li>@game.StartingTime ~ @game.HomeTeamName @game.HomeGoals:@game.AwayGoals @game.AwayTeamName</li>
    }
</ul>
<a class="nav-link text-dark" asp-area="" asp-controller="Games" asp-action="PreviousGames" asp-route-id="@Model.Id">See All</a>


<p>Next 5 Games:</p>
<ul>
    @foreach (var game in Model.UpcomingGames)
    {
        <li>@game.StartingTime ~ @game.HomeTeamName : @game.AwayTeamName</li>
    }
</ul>
<a class="nav-link text-dark" asp-area="" asp-controller="Games" asp-action="UpcomingGames" asp-route-id="@Model.Id">See All</a>



