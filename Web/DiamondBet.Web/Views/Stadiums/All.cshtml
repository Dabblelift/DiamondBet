@model DiamondBet.Web.ViewModels.Stadiums.StadiumsListViewModel
@{
    this.ViewData["Title"] = "All Stadiums";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h1>@this.ViewData["Title"]</h1>

<a class="nav-link text-dark" asp-area="" asp-controller="Stadiums" asp-action="Add">Add a New Stadium</a>


@foreach (var stadium in Model.Stadiums)
{
    <p><a class="nav-link text-dark" asp-area="" asp-controller="Stadiums" asp-action="ById" asp-route-id="@stadium.Id">@stadium.Name </a> - @stadium.Capacity seats</p>
}
