@model DiamondBet.Web.ViewModels.Countries.CountriesListViewModel;
@{
    this.ViewData["Title"] = "All Countries";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h1 class="text-center p-3" style="color: rebeccapurple">@this.ViewData["Title"]</h1>


<table class="table table-striped table-hover w-25" align="center">
    <thead>
        <tr>
            <th class="text-center text-white" style="background-color: mediumslateblue">Country name</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var country in Model.Countries)
        {
            <tr>
                <td>
                    <a class="nav-link text-dark text-center" asp-area="" asp-controller="Countries" asp-action="ById" asp-route-id="@country.Id">@country.Name</a>
                </td>
            </tr>
        }
    </tbody>
</table>
