@model DiamondBet.Web.ViewModels.Countries.CountryByIdViewModel
@using DiamondBet.Common

@{
    this.ViewData["Title"] = Model.Name;
}

<h1>@this.ViewData["Title"]</h1>

<h2>Capital: @Model.Capital</h2>

@if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <a class="nav-link text-dark" asp-area="Administration" asp-controller="Edit" asp-action="Country" asp-route-id="@Model.Id">Edit country</a>
}

<p>Teams from @Model.Name:</p>

@foreach (var team in Model.Teams)
{
    <a class="nav-link text-dark" asp-area="" asp-controller="Teams" asp-action="ById" asp-route-id="@team.Id">@team.Name</a>
}