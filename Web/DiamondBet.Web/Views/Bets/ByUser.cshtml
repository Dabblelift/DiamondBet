@model DiamondBet.Web.ViewModels.Bets.BetsListViewModel
@{
    this.ViewData["Title"] = $"Bets By User";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success">@this.TempData["Message"]</div>
}

<h1>@this.ViewData["Title"]</h1>

<a class="nav-link text-dark" asp-area="" asp-controller="Bets" asp-action="All">All Bets</a>


@foreach (var bet in Model.Bets)
{
    <a class="nav-link text-dark" asp-area="" asp-controller="Bets" asp-action="ById" asp-route-id="@bet.Id">@bet.HomeTeamName @bet.HomeTeamGoals:@bet.AwayTeamGoals @bet.AwayTeamName</a>
    <p>Prediction: @bet.Prediction / Odds: @bet.BetOdds / Status: @bet.BetStatus</p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="ById" asp-route-id="@bet.UserId">User: @bet.Username</a>
}
