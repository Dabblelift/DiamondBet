@model DiamondBet.Web.ViewModels.Teams.EditTeamInputModel
@{
    this.ViewData["Title"] = "Edit Team";
    var countriesItems = this.Model.CountriesItems.Select(x => new SelectListItem(x.Value, x.Key));

}

<h1>@this.ViewData["Title"]</h1>

<form method="post">

    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nickname"></label>
        <input asp-for="Nickname" class="form-control" />
        <span asp-validation-for="Nickname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="YearFounded"></label>
        <input asp-for="YearFounded" class="form-control" />
        <span asp-validation-for="YearFounded" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CountryId"></label>
        <select asp-for="CountryId" class="form-control" asp-items="countriesItems"></select>
        <span asp-validation-for="CountryId" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" onclick="return confirm('You are going to change this team\'s data. Are you sure?');" />

</form>

